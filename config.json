{
  "version": "3.1",
  "model_strategy": "always_opus",
  "default_model": "claude-opus-4-5-20251101",

  "circuit_breaker": {
    "enabled": true,
    "default": {
      "failure_threshold": 3,
      "success_threshold": 2,
      "timeout_seconds": 30,
      "half_open_max_calls": 3
    },
    "per_mcp": {
      "github": {
        "failure_threshold": 5,
        "timeout_seconds": 60
      },
      "tavily": {
        "failure_threshold": 3,
        "timeout_seconds": 30
      },
      "serena": {
        "failure_threshold": 3,
        "timeout_seconds": 20
      },
      "context7": {
        "failure_threshold": 3,
        "timeout_seconds": 30
      },
      "mem0": {
        "failure_threshold": 3,
        "timeout_seconds": 20
      },
      "sequential": {
        "failure_threshold": 3,
        "timeout_seconds": 30
      }
    }
  },

  "rate_limiting": {
    "enabled": true,
    "per_mcp": {
      "github": {
        "requests_per_minute": 30,
        "requests_per_hour": 500
      },
      "tavily": {
        "requests_per_minute": 20,
        "requests_per_hour": 200
      },
      "context7": {
        "requests_per_minute": 60,
        "requests_per_hour": 1000
      }
    }
  },

  "telemetry": {
    "enabled": true,
    "collect_token_usage": true,
    "collect_cost": true,
    "collect_duration": true,
    "daily_aggregation": true,
    "pricing": {
      "input_per_million": 5.0,
      "output_per_million": 25.0
    }
  },

  "retention": {
    "sessions_days": 30,
    "rollback_points_days": 7,
    "checkpoints_days": 7,
    "error_logs_days": 90,
    "telemetry_daily_days": 365,
    "circuit_breaker_hours": 24
  },

  "session": {
    "auto_save": true,
    "auto_save_interval_minutes": 5,
    "max_context_usage_warning": 0.7,
    "max_context_usage_critical": 0.9
  },

  "lock": {
    "enabled": true,
    "default_duration_hours": 1,
    "auto_renew": true,
    "renew_before_minutes": 10
  },

  "health_check": {
    "parallel": true,
    "timeout_seconds": 2,
    "mcps": ["serena", "context7", "mem0", "tavily", "github", "sequential"]
  },

  "agents": {
    "x-prompt-analyzer": {
      "model": "opus",
      "tools": ["Read", "Grep", "Glob"]
    },
    "x-plan-creator": {
      "model": "opus",
      "tools": ["Read", "Grep", "Glob", "Task"]
    },
    "x-code-generator": {
      "model": "opus",
      "tools": ["Read", "Write", "Edit", "Bash", "Grep", "Glob", "Task"]
    },
    "x-reviewer": {
      "model": "opus",
      "tools": ["Read", "Grep", "Glob"]
    }
  },

  "disk_monitoring": {
    "enabled": true,
    "warn_threshold_mb": 500,
    "critical_threshold_mb": 1000
  }
}
